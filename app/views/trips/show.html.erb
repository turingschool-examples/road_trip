<h1><%= @trip.name %></h1>
<p><%= @trip.destination_city %></p>
<p><%= @trip.mileage %></p>
<section id="trip-travelers">
  <h3>Travelers on this Trip:</h3>
  <% @trip.travelers.each do |traveler| %>
    <section id="traveler-<%= traveler.id%>">
      <p><%= traveler.name %></p>
      <%= button_to 'Remove Traveler', "/trips/#{@trip.id}/travelers/#{traveler.id}", method: :delete %>
    </section>
  <% end %>
</section>
<section id="similar-trips">
  <h3>Other Trips to this Destination</h3>
  <% if @trip.matching_trips? %>
    <% @trip.similar_trips.each do |trip| %>
      <% if trip.id != @trip.id %>
        <p><%= link_to trip.name, "/trips/#{trip.id}" %></p>
      <% end %>
    <% end %>
  <% else %>
    <p>No trips match this trip's destination</p>
  <% end %>
</section>