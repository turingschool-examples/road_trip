<h1><%= @trip.title %></h1>
<h2><%= @trip.destination %></h2>
<h2><%= @trip.mileage %></h2>
<h2>Travelers:</h2>
<% @trip.travelers.each do |traveler| %>
  <section id="traveler-<%= traveler.id %>">
    <p><%= traveler.name %></p>
    <%= button_to "Remove", "/trips/#{@trip.id}?traveler_id=#{traveler.id}", method: :patch %>
  </section>
<% end %>
<section class="other-trips">
  <h2>Other Trips To This Destination</h2>
  <% @trip.other_trips.each do |trip| %>
    <p><%= link_to trip.title, trip_path(trip.id) %></p>
  <% end %>
</section>
